<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

   <bean id="car" class="com.programcreek.helloworld.controller.Car">
   		<constructor-arg value="Ferrari" />
   </bean>

   <bean id="helloWorld" class="com.programcreek.helloworld.controller.HelloWorld">
       <property name="message" value="Ciao a tutto il mondo!!"/>
       <property name="vehicle" ref="car"/>
   </bean>
   
</beans>